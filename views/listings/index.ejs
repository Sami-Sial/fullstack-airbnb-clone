<% layout("/layouts/boilerplate.ejs") %>

<link rel="stylesheet" href="/css/index.css" />

<div style="display: flex; justify-content: space-between">
  <div id="filters">
    <div class="filter">
      <i class="fa-solid fa-mountain-city"></i>
      <p>Cabins</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-mountain"></i>
      <p>Mountains View</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-person-swimming"></i>
      <p>Amazing Pools</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-cow"></i>
      <p>Farms</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-umbrella-beach"></i>
      <p>Beachfront</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-landmark-dome"></i>
      <p>Historical Homes</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-umbrella-beach"></i>
      <p>Islands</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-tree-city"></i>
      <p>Top Cities</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>
  </div>

  <div id="tax-switch">
    <p style="font-weight: bold">Tax</p>
    <div id="switch">
      <div id="circle"></div>
    </div>
  </div>
</div>

<h3 style="font-weight: bold">All Listings</h3>

<%if(allListings.length<=0) { %>
<div
  style="
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: 3rem;
  "
>
  <h4>No Listings Found for this category</h4>
</div>
<% } %>

<div id="cards-container">
  <% for(listing of allListings){ %>
  <div class="card">
    <a href="/listings/<%=listing._id%>" class="listing-link">
      <div class="card-img">
        <img
          src="<%=listing.images[0].url%>"
          alt=""
          class="listing-details-img"
        />
      </div>
    </a>
    <div class="card-info">
      <p style="font-weight: bold; font-size: 14px" class="card-title">
        <%=listing.title%>
      </p>
      <p style="font-weight: bold; font-size: 13px">
        $<%=listing.price.toLocaleString("en-IN")%> / night<ispan
          class="tax-info"
        >
          +18% GST</ispan
        >
      </p>
    </div>
  </div>

  <% } %>
</div>

<script src="/js/index.js"></script>
